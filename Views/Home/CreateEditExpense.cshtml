@{
    ViewData["Title"] = "Create/Edit";
}

@model ExpenseTracker.Models.Expense  

<div class="text-center">
    <h1 class="display-4">Create or edit an expense</h1>
</div>

<form asp-action="CreateEditExpenseForm" asp-controller="Home">
    <label>Id</label>
    <input class="form-control" type="number" placeholder="0" asp-for="Id"/>

    <label class="mt-4">Price $</label>
    <input class="form-control" type="number" placeholder="$0.00" asp-for="Price" stop="0.01" />
    
    <label class="mt-4">Name</label>
    <input class="form-control" type="text" placeholder="What did you buy?" asp-for="Name" />

    <button class="btn btn-primary mt-4" type="submit">Add</button>

</form>